    <script>
        const firebaseConfig = {
            apiKey: "AIzaSyC0cRyGy03MXUYZgaEtU9V3RpZ6f4PzKp4",
            authDomain: "aws-she-builds-tracker.firebaseapp.com",
            projectId: "aws-she-builds-tracker",
            storageBucket: "aws-she-builds-tracker.firebasestorage.app",
            messagingSenderId: "543701356374",
            appId: "1:543701356374:web:6a72735fdb8e4a3db4d0f7"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();

        // Make it globally accessible
        window.firebaseApp = {
            auth: auth,
            db: db,
            firebase: firebase
        };

        console.log('‚úÖ Firebase initialized');
    </script>

    <!-- ============================================ -->
    <!-- MAIN APPLICATION LOGIC -->
    <!-- ============================================ -->
    <script>
        // ============================================
        // GLOBAL VARIABLES
        // ============================================
        let currentReflectionId = null;
        let isSubmitted = false;
        let autoSaveTimer = null;
        
        // Progress Tracking Configuration
        const progressConfig = {
            milestones: [
                {
                    id: "meeting-logs",
                    name: "Complete Meeting Logs",
                    sectionId: "meeting-logs-section",
                    checkFunction: () => appData.meetingLogs.length > 0
                },
                {
                    id: "personal-mission",
                    name: "Complete Personal Mission Statement",
                    sectionId: "personal-mission-section",
                    checkFunction: () => appData.personalMission.trim().length > 50
                },
                {
                    id: "smart-goals",
                    name: "Set SMART Goals",
                    sectionId: "smart-goals-section",
                    checkFunction: () => {
                        const hasShortTerm = appData.smartGoals.shortTerm.some(g => g.goal.trim() !== '');
                        const hasLongTerm = appData.smartGoals.longTerm.some(g => g.goal.trim() !== '');
                        return hasShortTerm && hasLongTerm;
                    }
                },
                {
                    id: "skill-assessment",
                    name: "Identify Strengths & Development Areas",
                    sectionId: "skill-assessment-section",
                    checkFunction: () => {
                        const hasStrengths = appData.strengths.filter(s => s.trim() !== '').length >= 3;
                        const hasDevelopment = appData.developmentAreas.filter(a => a.trim() !== '').length >= 2;
                        return hasStrengths && hasDevelopment;
                    }
                }
            ],
            progressLevels: {
                0: {emoji: "üå±", text: "Just Started"},
                25: {emoji: "üìù", text: "Getting Started"},
                50: {emoji: "üí™", text: "Making Progress"},
                75: {emoji: "üöÄ", text: "Almost There"},
                100: {emoji: "‚≠ê", text: "Foundation Complete!"}
            }
        };

        // Data structure
        let appData = {
            personalMission: '',
            strengths: ['', '', '', '', ''],
            developmentAreas: ['', '', ''],
            learningPreferences: '',
            smartGoals: {
                shortTerm: [
                    { goal: '', metric: '', completed: false },
                    { goal: '', metric: '', completed: false },
                    { goal: '', metric: '', completed: false }
                ],
                longTerm: [
                    { goal: '', metric: '', completed: false },
                    { goal: '', metric: '', completed: false }
                ]
            },
            northStar: {
                '20years': { fulfillment: '', financial: '', relationship: '', myself: '' },
                '10years': { fulfillment: '', financial: '', relationship: '', myself: '' },
                '5years': { fulfillment: '', financial: '', relationship: '', myself: '' },
                '3years': { fulfillment: '', financial: '', relationship: '', myself: '' },
                '1year': { fulfillment: '', financial: '', relationship: '', myself: '' }
            },
            pressRelease: {
                headline: '',
                subheading: '',
                paragraph: '',
                quotes: ['', '', '']
            },
            meetingLogs: []
        };

        // Start with all sections expanded by default
        const expandedSections = {
            'meetings': true,
            'mission': true,
            'smart': true,
            'skills': true,
            'northstar': true
        };

        // ============================================
        // FIREBASE FUNCTIONS
        // ============================================
        
        // Initialize Firebase and load data
        async function initializeFirebase() {
            try {
                const user = auth.currentUser;
                
                if (!user) {
                    console.warn('‚ö†Ô∏è No user authenticated - using localStorage only');
                    // Still render sections even without auth
                    renderSections();
                    updateProgress();
                    return;
                }
                
                console.log('‚úÖ User authenticated:', user.uid);
                
                // Get user data
                const userDoc = await db.collection('users').doc(user.uid).get();
                const userData = userDoc.data();
                
                if (userData.role !== 'mentee') {
                    alert('This page is for mentees only');
                    window.location.href = '../index.html';
                    return;
                }
                
                // Get mentee's pairing
                const pairingSnapshot = await db.collection('pairings')
                    .where('menteeId', '==', user.uid)
                    .limit(1)
                    .get();
                
                if (pairingSnapshot.empty) {
                    console.warn('‚ö†Ô∏è No mentorship pairing found');
                    renderSections();
                    updateProgress();
                    return;
                }
                
                const pairingId = pairingSnapshot.docs[0].id;
                
                // Check if reflection already exists for Month 1
                const reflectionSnapshot = await db.collection('reflections')
                    .where('pairingId', '==', pairingId)
                    .where('month', '==', 1)
                    .where('authorId', '==', user.uid)
                    .limit(1)
                    .get();
                
                if (!reflectionSnapshot.empty) {
                    // Load existing reflection
                    const reflectionDoc = reflectionSnapshot.docs[0];
                    currentReflectionId = reflectionDoc.id;
                    const reflectionData = reflectionDoc.data();
                    
                    // Load data into appData
                    if (reflectionData.formData) {
                        appData = reflectionData.formData;
                    }
                    
                    // Check if already submitted
                    if (reflectionData.status === 'submitted') {
                        isSubmitted = true;
                        disableSubmission();
                    }
                    
                    // Check for mentor feedback
                    if (reflectionData.status === 'reviewed' && reflectionData.mentorFeedback) {
                        displayMentorFeedback(reflectionData);
                    }
                    
                } else {
                    // Create new reflection document
                    const newReflectionRef = await db.collection('reflections').add({
                        authorId: user.uid,
                        authorRole: 'mentee',
                        pairingId: pairingId,
                        month: 1,
                        formData: appData,
                        status: 'draft',
                        createdAt: firebase.firestore.FieldValue.serverTimestamp(),
                        lastSavedAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    currentReflectionId = newReflectionRef.id;
                }
                
                // Render sections
                renderSections();
                updateProgress();
                
            } catch (error) {
                console.error('Error initializing Firebase:', error);
                // Still render sections even if Firebase fails
                renderSections();
                updateProgress();
            }
        }
        
        // Auto-save to Firebase (debounced)
        function autoSaveToFirebase() {
            if (!currentReflectionId || isSubmitted) return;
            
            if (autoSaveTimer) {
                clearTimeout(autoSaveTimer);
            }
            
            const statusEl = document.getElementById('saveStatus');
            statusEl.textContent = 'üíæ Saving...';
            statusEl.className = 'text-sm text-gray-500';
            
            autoSaveTimer = setTimeout(async () => {
                try {
                    await db.collection('reflections').doc(currentReflectionId).update({
                        formData: appData,
                        lastSavedAt: firebase.firestore.FieldValue.serverTimestamp()
                    });
                    
                    statusEl.textContent = '‚úì Saved';
                    statusEl.className = 'text-sm text-green-600';
                    
                    setTimeout(() => {
                        statusEl.textContent = '';
                    }, 2000);
                    
                } catch (error) {
                    console.error('Auto-save error:', error);
                    statusEl.textContent = '‚ö† Error saving';
                    statusEl.className = 'text-sm text-red-600';
                }
            }, 2000);
        }
        
        // Handle submission
        async function handleSubmit() {
            if (isSubmitted) {
                alert('This reflection has already been submitted!');
                return;
            }
            
            const hasContent = 
                appData.personalMission.trim().length > 0 ||
                appData.meetingLogs.length > 0 ||
                appData.smartGoals.shortTerm.some(g => g.goal.trim() !== '') ||
                appData.strengths.some(s => s.trim() !== '');
            
            if (!hasContent) {
                alert('Please fill in at least one section before submitting.');
                return;
            }
            
            const confirmed = confirm(
                'Are you sure you want to submit Month 1?\n\n' +
                'Your mentor will be notified and you will not be able to edit after submission.\n\n' +
                'Click OK to submit, or Cancel to continue editing.'
            );
            
            if (!confirmed) return;
            
            const submitBtn = document.getElementById('submitReflection');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Submitting...';
            
            try {
                const user = auth.currentUser;
                
                await db.collection('reflections').doc(currentReflectionId).update({
                    formData: appData,
                    status: 'submitted',
                    submittedAt: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                const reflectionDoc = await db.collection('reflections').doc(currentReflectionId).get();
                const pairingId = reflectionDoc.data().pairingId;
                const pairingDoc = await db.collection('pairings').doc(pairingId).get();
                const mentorId = pairingDoc.data().mentorId;
                
                await db.collection('notifications').add({
                    userId: mentorId,
                    type: 'submission',
                    title: 'New Month 1 Reflection Submitted',
                    message: 'A mentee has submitted their Month 1 reflection',
                    relatedId: currentReflectionId,
                    read: false,
                    createdAt: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                await db.collection('activity_log').add({
                    userId: user.uid,
                    action: 'reflection_submitted',
                    entityType: 'reflection',
                    entityId: currentReflectionId,
                    metadata: { month: 1 },
                    timestamp: firebase.firestore.FieldValue.serverTimestamp()
                });
                
                alert('‚úÖ Month 1 submitted successfully!\n\nYour mentor has been notified and will provide feedback soon.');
                
                isSubmitted = true;
                disableSubmission();
                
            } catch (error) {
                console.error('Submission error:', error);
                alert('Error submitting reflection. Please try again.');
                submitBtn.disabled = false;
                submitBtn.textContent = 'Submit Month 1';
            }
        }
        
        // Display mentor feedback
        function displayMentorFeedback(reflectionData) {
            document.getElementById('feedbackSection').classList.remove('hidden');
            document.getElementById('mentorFeedbackText').textContent = reflectionData.mentorFeedback;
            
            if (reflectionData.reviewedAt) {
                const reviewDate = reflectionData.reviewedAt.toDate();
                document.getElementById('feedbackDate').textContent = reviewDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });
            }
            
            makeFormReadOnly();
        }
        
        // Disable submission after submitted
        function disableSubmission() {
            const submitBtn = document.getElementById('submitReflection');
            submitBtn.disabled = true;
            submitBtn.textContent = '‚úì Already Submitted';
            submitBtn.className = 'bg-green-600 text-white px-6 py-3 rounded-lg cursor-not-allowed font-semibold opacity-75';
            
            const container = document.querySelector('.max-w-5xl');
            const banner = document.createElement('div');
            banner.className = 'bg-green-50 border border-green-200 rounded-lg p-4 mb-6';
            banner.innerHTML = `
                <div class="flex items-center gap-3">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <p class="font-semibold text-green-800">Month 1 Submitted</p>
                        <p class="text-sm text-green-700">Your mentor will review your work and provide feedback soon.</p>
                    </div>
                </div>
            `;
            container.insertBefore(banner, container.children[1]);
        }
        
        // Make form read-only
        function makeFormReadOnly() {
            const submitBtn = document.getElementById('submitReflection');
            if (submitBtn) submitBtn.style.display = 'none';
            
            const inputs = document.querySelectorAll('input, textarea, select, button');
            inputs.forEach(input => {
                if (!input.closest('a')) {
                    input.disabled = true;
                    input.classList.add('bg-gray-100', 'cursor-not-allowed');
                }
            });
        }

        // ============================================
        // DATA MANAGEMENT
        // ============================================
        
        function loadData() {
            const saved = localStorage.getItem('mentee-month1-data');
            if (saved) {
                appData = JSON.parse(saved);
            }
        }

        function saveData() {
            localStorage.setItem('mentee-month1-data', JSON.stringify(appData));
            const status = document.getElementById('saveStatus');
            status.className = 'text-sm text-green-600';
            status.textContent = '‚úì Progress saved!';
            setTimeout(() => status.textContent = '', 2000);
            updateProgress();
            autoSaveToFirebase();
        }

        function updateProgress() {
            let completedCount = 0;
            
            progressConfig.milestones.forEach(milestone => {
                if (milestone.checkFunction()) {
                    completedCount++;
                }
            });
            
            const totalMilestones = progressConfig.milestones.length;
            const percentage = Math.round((completedCount / totalMilestones) * 100);
            
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            const progressStatus = document.getElementById('progressStatus');
            const milestoneCount = document.getElementById('milestoneCount');
            
            if (progressBar) progressBar.style.width = percentage + '%';
            if (progressText) progressText.textContent = percentage + '%';
            if (milestoneCount) milestoneCount.textContent = `${completedCount} of ${totalMilestones} milestones completed`;
            
            let statusLevel = 0;
            if (percentage >= 100) statusLevel = 100;
            else if (percentage >= 75) statusLevel = 75;
            else if (percentage >= 50) statusLevel = 50;
            else if (percentage >= 25) statusLevel = 25;
            
            const status = progressConfig.progressLevels[statusLevel];
            if (progressStatus && status) {
                progressStatus.textContent = `${status.emoji} ${status.text}`;
            }
        }

        // ============================================
        // UI FUNCTIONS
        // ============================================
        
        function toggleSection(key) {
            expandedSections[key] = !expandedSections[key];
            renderSections();
        }

        function updateField(field, value) {
            appData[field] = value;
            autoSaveToFirebase();
        }

        function updateArray(field, index, value) {
            appData[field][index] = value;
            autoSaveToFirebase();
        }

        function updateNested(path, value) {
            const keys = path.split('.');
            let obj = appData;
            for (let i = 0; i < keys.length - 1; i++) {
                obj = obj[keys[i]];
            }
            obj[keys[keys.length - 1]] = value;
            autoSaveToFirebase();
        }

        function addMeeting() {
            appData.meetingLogs.push({
                id: Date.now(),
                date: new Date().toISOString().split('T')[0],
                week: '',
                topics: '',
                nextSteps: '',
                mentorAdvice: ''
            });
            renderSections();
            autoSaveToFirebase();
        }

        function deleteMeeting(id) {
            appData.meetingLogs = appData.meetingLogs.filter(m => m.id !== id);
            renderSections();
            autoSaveToFirebase();
        }

        function updateMeeting(id, field, value) {
            const meeting = appData.meetingLogs.find(m => m.id === id);
            if (meeting) meeting[field] = value;
            autoSaveToFirebase();
        }

        // ============================================
        // RENDER FUNCTIONS
        // ============================================
        
        function renderSections() {
            console.log('üîµ renderSections() called');
            const container = document.getElementById('sectionsContainer');
            if (!container) {
                console.error('‚ùå sectionsContainer not found!');
                return;
            }
            console.log('‚úÖ Container found, rendering...');
            container.innerHTML = `
                ${renderMeetingLogs()}
                ${renderPersonalMission()}
                ${renderSmartGoals()}
                ${renderSkills()}
                ${renderNorthStar()}
            `;
            console.log('‚úÖ Sections rendered');
        }

        function renderMeetingLogs() {
            const isExpanded = expandedSections['meetings'];
            return `
                <div id="meeting-logs-section" class="bg-white rounded-lg shadow-md mb-4 overflow-hidden border border-gray-200">
                    <button onclick="toggleSection('meetings')" class="w-full p-4 flex items-center justify-between hover:bg-purple-50 transition-colors">
                        <div class="flex items-center gap-3">
                            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <h3 class="text-lg font-semibold text-gray-800">Meeting Logs</h3>
                        </div>
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="${isExpanded ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7'}"/>
                        </svg>
                    </button>
                    ${isExpanded ? `
                    <div class="p-6 border-t border-gray-200 bg-gray-50">
                        <button onclick="addMeeting()" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 mb-4">
                            Add New Meeting
                        </button>
                        <div class="space-y-4">
                            ${appData.meetingLogs.map(log => `
                                <div class="bg-white p-4 rounded-lg border shadow-sm">
                                    <div class="grid md:grid-cols-2 gap-3 mb-3">
                                        <input type="date" value="${log.date}" onchange="updateMeeting(${log.id}, 'date', this.value)" 
                                               class="p-2 border rounded focus:ring-2 focus:ring-purple-500">
                                        <input type="text" value="${log.week}" onchange="updateMeeting(${log.id}, 'week', this.value)" 
                                               placeholder="Week #" class="p-2 border rounded focus:ring-2 focus:ring-purple-500">
                                    </div>
                                    <textarea onchange="updateMeeting(${log.id}, 'topics', this.value)" 
                                              placeholder="What we talked about..." class="w-full p-2 border rounded mb-2 h-20 focus:ring-2 focus:ring-purple-500">${log.topics}</textarea>
                                    <textarea onchange="updateMeeting(${log.id}, 'nextSteps', this.value)" 
                                              placeholder="What I will do next..." class="w-full p-2 border rounded mb-2 h-20 focus:ring-2 focus:ring-purple-500">${log.nextSteps}</textarea>
                                    <textarea onchange="updateMeeting(${log.id}, 'mentorAdvice', this.value)" 
                                              placeholder="Mentor's advice..." class="w-full p-2 border rounded mb-2 h-20 focus:ring-2 focus:ring-purple-500">${log.mentorAdvice}</textarea>
                                    <button onclick="deleteMeeting(${log.id})" class="text-red-600 text-sm hover:text-red-800">Delete</button>
                                </div>
                            `).join('')}
                            ${appData.meetingLogs.length === 0 ? '<p class="text-gray-500 text-center py-8">No meetings yet. Click "Add New Meeting" to start!</p>' : ''}
                        </div>
                    </div>
                    ` : ''}
                </div>
            `;
        }

        function renderPersonalMission() {
