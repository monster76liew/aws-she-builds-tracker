        }

        // ============================================
        // INITIALIZATION
        // ============================================
        
        console.log('üü¢ Script starting...');
        
        // Load from localStorage first (fallback)
        loadData();
        console.log('üì¶ Data loaded from localStorage');
        
        // Render sections immediately (don't wait for auth)
        renderSections();
        updateProgress();
        console.log('üé® Initial render complete');
        
        // Auth state listener (for Firebase features)
        auth.onAuthStateChanged(async (user) => {
            console.log('üîê Auth state changed:', user ? 'Logged in' : 'Not logged in');
            if (user) {
                console.log('üë§ User ID:', user.uid);
                await initializeFirebase();
            } else {
                console.log('‚ö†Ô∏è No auth - localStorage mode only');
            }
        });
        
        // Listen for input changes
        document.addEventListener('input', () => {
            setTimeout(updateProgress, 100);
        });
        document.addEventListener('change', () => {
            setTimeout(updateProgress, 100);
        });
        
        console.log('‚úÖ Script loaded successfully');
    </script>
</body>
</html>